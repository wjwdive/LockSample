// 测试环境配置文件
// 引入共享配置
#include "Common.xcconfig"

// 构建目录设置
CONFIGURATION_BUILD_DIR = $(PODS_CONFIGURATION_BUILD_DIR)/$(PRODUCT_NAME)

// 调试信息格式
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym

// 启用断言和测试能力
ENABLE_NS_ASSERTIONS = YES
ENABLE_TESTABILITY = YES

// 优化级别
SWIFT_OPTIMIZATION_LEVEL = -Onone
GCC_OPTIMIZATION_LEVEL = 0

// 预处理器宏定义
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) DEBUG=1 TEST_ENV=1

// 测试环境API地址
API_BASE_URL = @"https://test-api.example.com"

// 环境名称
ENVIRONMENT_NAME = "测试环境 (Test)"

// 测试环境App显示名称
APP_DISPLAY_NAME = LockSample-Test

// 测试环境Bundle ID
PRODUCT_BUNDLE_IDENTIFIER = com.example.lockSample.test
